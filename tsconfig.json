{
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "target": "ESNext",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "rootDir": "src",

    "module": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"]
}
